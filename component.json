{
  "title": "Outlook",
  "description": "elastic.io integration component for Office 365 Outlook REST API",
  "envVars": {
    "MSAPP_CLIENT_ID": {
      "required": true,
      "description": "Your Microsoft "
    },
    "MSAPP_CLIENT_SECRET": {
      "required": true,
      "description": "Your Salesforce OAuth client secret"
    }
  },
  "credentials": {
    "fields": {
      "oauth": {
        "label": "Authentication",
        "viewClass": "OAuthFieldView",
        "required": true
      }
    },
    "oauth2": {
      "client_id": "{{MSAPP_CLIENT_ID}}",
      "client_secret": "{{MSAPP_CLIENT_SECRET}}",
      "auth_uri": "https://login.microsoftonline.com/common/oauth2/v2.0/authorize",
      "token_uri": "https://login.microsoftonline.com/common/oauth2/v2.0/token"
      "scopes": [
        "openid","User.Read","Contacts.Read","Profile"
      ]
    }
  },
  "triggers": {
    "getContacts": {
      "title": "Contacts",
      "main": "./lib/triggers/contacts.js",
      "type": "polling",
      "metadata": {
        "in": {},
        "out": "./lib/schemas/contacts.out.json"
      }
    }
  }
}
